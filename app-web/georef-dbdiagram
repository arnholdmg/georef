Table areas {
  id int [pk, increment]
  name varchar
  color varchar
  coords varchar
  created_at timestamp
  updated_at timestamp
  deleted_at timestamp
}

Table groups {
  id int [pk, increment]
  name varchar
  color varchar
  created_at timestamp
  updated_at timestamp
  deleted_at timestamp
}

Table patients {
  id int [pk, increment]
  name varchar
  birth date
  cns varchar
  phone varchar
  responsible* varchar
  relationship* varchar
  address varchar
  coord varchar
  created_at timestamp
  updated_at timestamp
  deleted_at timestamp
  
  area_id int [ref: > areas.id]
}

Table groups_patients {
  group_id int [ref: > groups.id]
  patient_id int [ref: > patients.id]
}